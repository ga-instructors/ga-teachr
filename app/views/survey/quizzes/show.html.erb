<p id="notice"><%= notice %></p>

<%= render 'cohorts/cohort', cohort: @survey_questionnaire.cohort %>

<div class="large container" style="margin-top:1rem;">
  <% if policy(@survey_questionnaire).update? %>
    <div style="float: right;"><%= link_to 'Edit Survey', edit_survey_quiz_path(@survey_questionnaire), class: 'button' %></div>
  <% end %>
  <h2><%= @survey_questionnaire.ordinal %>. <%= @survey_questionnaire.title %></h2>
  <hr />
  <div style="padding: 2%; min-height: 10em;" class="markdown">
    <%= @survey_questionnaire.introduction_html %>
  </div>
</div>
<div class="medium container">
  <hr />

  <div style="text-align: center;">
    <% if policy(@survey_response).create? %>
      <%= form_for @survey_response do |f| %>
        <%= f.hidden_field :survey_questionnaire_id %>
				<%= f.submit 'Start', class: 'big primary button', onclick: 'this.requestFullscreen()' %>
      <% end %>
    <% elsif policy(@survey_questionnaire).update? %>
      <%= link_to "Start", survey_quiz_questions_path(@survey_questionnaire), class: 'big primary button' %>
    <% end %>
    <br /><br />
  </div>
</div>
