<% if form.object.errors.any? %>
  <div id="error_explanation">
    <ul>
    <% form.object.errors.each do |field, message| %>
			<li><%= link_to field.to_s.titleize, "#survey_quiz_#{field.to_s.underscore}" %>&nbsp;<%= message %></li>
    <% end %>
		</ul>
  </div>
<% end %>

<div class="field">
  <%= form.label :cohort_id %>
  <%= form.select :cohort_id, Cohort.joins(:course).pluck("CONCAT(courses.name, CONCAT(' - ', cohorts.name))", :id) %>
</div>
<div class="field">
  <%= form.label :title %>
  <%= form.number_field :ordinal, style: 'width: 3rem;' %>
  <%= form.text_field :title, style: 'width: calc(100% - 130pt - 3rem);'%>
</div>
<div class="field">
  <%= form.label :introduction %><br>
  <%= form.text_area :introduction, class: 'markdown' %>
  <iframe class="markdown-preview" src="http://about:blank" height="1"></iframe>
</div>
<div class="field">
  <%= form.label :begins_at %>
  <%= form.datetime_select :begins_at %>
</div>
<div class="field">
  <%= form.label :ends_at %>
  <%= form.datetime_select :ends_at %>
</div>
