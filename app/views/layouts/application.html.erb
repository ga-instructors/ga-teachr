<!DOCTYPE html>
<html>
<head>
	<title><%=t :title %></title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	<%= csrf_meta_tags %>
	<meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body id="<%= controller_name %>_<%= action_name %>" class="<%= controller_name %>">

	<header>
		<%= link_to current_auth ? authentication_path(current_auth) : root_path do %>
			<%= image_tag 'ga-brand.png' %>
			<h3 style="display: inline-block; color: #FFFFFF; line-height: 1em;">&nbsp;GENERAL ASSEMBLY</h3>
		<% end %>
	</header>
	<%= yield %>

</body>
</html>
